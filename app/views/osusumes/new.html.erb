<h3>新規投稿ページ</h3>
<%= form_for @osusume do |f| %>


  <div class="field">
    <%= f.label :本棚名 %>
    <%= f.text_field :name, :size => 30 %>
  </div>


  


  <div class="field">
    <%= f.label :本のタイトル1  %>
    <%= f.text_field :title, :size => 10 %>
  </div>

  <div class="field">
    <%= f.label :本のタイトル2  %>
    <%= f.text_field :title2, :size => 10 %>
  </div>
<div class="field">
  <%= f.label :本のタイトル3  %>
  <%= f.text_field :title3, :size => 10 %>
 </div>
 <div class="field">
    <%= f.label :本のタイトル4  %>
