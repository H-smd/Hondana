  </div>
  <div class="field">
    <%= f.label :本のタイトル5  %>
    <%= f.text_field :title5, :size => 10 %>
  </div>
  <div class="field">
    <%= f.label :本のタイトル6  %>
    <%= f.text_field :title6, :size => 10 %>
  </div>
  <div class="field">
    <%= f.label :本のタイトル7  %>
    <%= f.text_field :title7, :size => 10 %>
